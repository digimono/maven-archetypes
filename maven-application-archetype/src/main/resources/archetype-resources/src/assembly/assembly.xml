<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>${activeProfile}</id>

  <formats>
    <format>dir</format>
    <format>tar.gz</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory/>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources</directory>
      <outputDirectory>conf</outputDirectory>
      <filtered>true</filtered>
      <excludes>
        <exclude>banner.txt</exclude>
        <exclude>loader.properties</exclude>
        <exclude>boot.conf</exclude>
        <exclude>${project.build.finalName}.conf</exclude>
        <exclude>application-*.yml</exclude>
        <exclude>static/**</exclude>
        <exclude>templates/**</exclude>
        <exclude>META-INF/mybatis/</exclude>
        <exclude>META-INF/assembly/</exclude>
        <exclude>META-INF/**/.keep</exclude>
        <exclude>META-INF/spring-devtools.properties</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources</directory>
      <outputDirectory>conf</outputDirectory>
      <filtered>false</filtered>
      <includes>
        <include>static/**</include>
        <include>templates/**</include>
        <include>META-INF/mybatis/mapper/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources</directory>
      <outputDirectory>conf</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>application-${activeProfile}.yml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources</directory>
      <outputDirectory>lib</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>loader.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/profiles/${activeProfile}</directory>
      <outputDirectory>conf</outputDirectory>
      <filtered>false</filtered>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.outputDirectory}/META-INF</directory>
      <outputDirectory>conf/META-INF</outputDirectory>
      <filtered>false</filtered>
      <includes>
        <include>git.properties</include>
        <include>build-info.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${main.basedir}/src/scripts</directory>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>launch.sh</include>
      </includes>
      <fileMode>0744</fileMode>
      <lineEnding>unix</lineEnding>
    </fileSet>
  </fileSets>

  <files>
    <file>
      <source>${project.basedir}/src/main/resources/boot.conf</source>
      <outputDirectory>lib</outputDirectory>
      <filtered>true</filtered>
      <destName>${project.build.finalName}.conf</destName>
    </file>
  </files>
</assembly>
